<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    android:padding="@dimen/sp_10">

    <TextView
        android:id="@+id/tv_name_dizhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名"
        android:textColor="#000000"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_phone_dizhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sp_30"
        android:text="18738281838"
        android:textColor="#000000"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="@id/tv_name_dizhi"
        app:layout_constraintLeft_toRightOf="@id/tv_name_dizhi"
        app:layout_constraintTop_toTopOf="@id/tv_name_dizhi" />

    <TextView
        android:id="@+id/tv_moren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/shape_xiadan_moren"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_4"
        android:paddingTop="@dimen/dp_2"
        android:paddingRight="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_2"
        android:text="默认"
        android:textColor="#ffffff"
        android:textSize="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@id/tv_name_dizhi"
        app:layout_constraintLeft_toRightOf="@id/tv_phone_dizhi"
        app:layout_constraintTop_toTopOf="@id/tv_name_dizhi" />

    <TextView
        android:id="@+id/tv_dizhi_dizhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="我命由我不由天"
        android:textColor="#666666"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name_dizhi" />

    <ImageView
        android:id="@+id/iv_bianji"
        android:layout_width="@dimen/sp_20"
        android:layout_height="@dimen/sp_20"
        android:src="@mipmap/dizhibianji"
        app:layout_constraintBottom_toBottomOf="@id/tv_dizhi_dizhi"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_dizhi_dizhi" />
</androidx.constraintlayout.widget.ConstraintLayout>